pretty confused!!!!
"""



class Solution:
    def deleteNode(self, root: TreeNode, key: int) -> TreeNode:
        #edge case
        if not root:
            return root
        
        #process if the root.val== key, find the next root.left, and the most right leaf of root.left, largest number of the group of number which smaller than the root value
        if root.val == key:
            if root.left:
                root_right_most = root.left
                while root_right_most.right:
                    root_right_most = root_right_most.right
                # attach the root.right to the found left most right leaf
                root_right_most.right = root.right
                return root.left
            else:
                return root.right
            
        
        # recursion relationship
        elif  root.val > key:
            root.left = self.deleteNode(root.left , key)
        else:
            root.right =  self.deleteNode(root.right, key)
        
        return root 
        
