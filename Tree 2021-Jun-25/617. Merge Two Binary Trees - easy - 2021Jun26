class Solution:
    def mergeTrees(self, root1: TreeNode, root2: TreeNode) -> TreeNode:
        #base case
        if root1 is None:
            return root2
        if root2 is None:
            return root1
        #recursion relationship
    
        root1.val += root2.val 
        root1.right = self.mergeTrees(root1.right, root2.right)
        root1.left = self.mergeTrees(root1.left, root2.left)
        return root1
# no need to build a new root, we can just add root2 into root1
# recursion will do from botton to top so final root is the top root!!
